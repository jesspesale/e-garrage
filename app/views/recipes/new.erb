<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>New Recipe</h1>
<h4>Be sure to fill out all appropriate fields</h4>
<br>
<form action="/recipes" method="post" id="recipe">
    <h4>
    <label for="recipe_name">Recipe Name: </label>
    <input type="text" placeholder="Enter Recipe name" name="recipe_name">
    <br>
    </h4>
    <br>
    <h4>
    <label for="ingredients">Ingredients 
    <br> <h5>Please separate each ingredient with a comma (,) </h5>
    </label>
    <input type="text" minlength="4" maxlength="100" size="50" name="ingredients" id="ingredients" /> 
    <br>

    </h4>
    <br>
    <h4>
    <label for="instructions">Instructions </label>
    <br> <h5>Please separate each new instruction with a comma (,) </h5>
    <input type="text" minlength="4" maxlength="100" size="50" name="instructions" id="instructions" /> 
    <br>
    </h4>
    <br>
    <h4>
    <label for="cook_time">Cook Time (in minutes): </label> 
    <input type="text" name="cook_time">
    </h4>
    <br>
    <input type="submit" value="Create New Recipe">


</form>
